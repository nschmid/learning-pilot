APP_NAME=LearningPilot
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Europe/Berlin
APP_URL=http://localhost:8000
APP_LOCALE=de
APP_FALLBACK_LOCALE=en
APP_AVAILABLE_LOCALES=de,en,fr

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=lernpfad
DB_USERNAME=postgres
DB_PASSWORD=

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=do_spaces
QUEUE_CONNECTION=database

# Redis (optional but recommended)
CACHE_STORE=database
# CACHE_STORE=redis
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Mail
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@learningpilot.com"
MAIL_FROM_NAME="${APP_NAME}"

# DigitalOcean Spaces (S3-compatible file storage)
DO_SPACES_KEY=your-spaces-key
DO_SPACES_SECRET=your-spaces-secret
DO_SPACES_REGION=fra1
DO_SPACES_BUCKET=learningpilot-files
DO_SPACES_ENDPOINT=https://fra1.digitaloceanspaces.com
DO_SPACES_URL=https://learningpilot-files.fra1.cdn.digitaloceanspaces.com

# Meilisearch (for full-text search)
SCOUT_DRIVER=collection
# SCOUT_DRIVER=meilisearch
# MEILISEARCH_HOST=http://127.0.0.1:7700
# MEILISEARCH_KEY=masterKey

# Vite
VITE_APP_NAME="${APP_NAME}"

# LearningPilot Settings
LERNPFAD_DEFAULT_PASSING_SCORE=70
LERNPFAD_MAX_ASSESSMENT_ATTEMPTS=3
LERNPFAD_CERTIFICATE_VALIDITY_YEARS=2
LERNPFAD_MAX_FILE_SIZE_MB=100
LERNPFAD_GAMIFICATION_ENABLED=true

# AI Configuration (Prism - multi-provider)
# Supported: anthropic, openai, gemini, mistral, ollama, groq, xai
PRISM_DEFAULT_PROVIDER=anthropic

# Anthropic (Claude)
ANTHROPIC_API_KEY=
PRISM_ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# OpenAI (GPT) - optional
# OPENAI_API_KEY=
# PRISM_OPENAI_MODEL=gpt-4o

# Google (Gemini) - optional
# GEMINI_API_KEY=
# PRISM_GEMINI_MODEL=gemini-1.5-pro

# Ollama (local) - optional
# OLLAMA_URL=http://localhost:11434
# PRISM_OLLAMA_MODEL=llama3

# AI Feature Settings
AI_DEFAULT_MONTHLY_TOKENS=100000
AI_DEFAULT_DAILY_REQUESTS=100
AI_CACHE_ENABLED=true

# Stripe Billing (Laravel Cashier)
STRIPE_KEY=pk_test_...
STRIPE_SECRET=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Supported currencies: chf, eur, usd
CASHIER_CURRENCY=eur
BILLING_SUPPORTED_CURRENCIES=chf,eur,usd

# Trial period (1 month for schools)
TRIAL_DAYS=30

# Subscription Plans - CHF (Switzerland)
STRIPE_PRICE_SCHOOL_STARTER_CHF=price_...
STRIPE_PRICE_SCHOOL_PRO_CHF=price_...
STRIPE_PRICE_SCHOOL_ENTERPRISE_CHF=price_...

# Subscription Plans - EUR (Europe)
STRIPE_PRICE_SCHOOL_STARTER_EUR=price_...
STRIPE_PRICE_SCHOOL_PRO_EUR=price_...
STRIPE_PRICE_SCHOOL_ENTERPRISE_EUR=price_...

# Subscription Plans - USD (International)
STRIPE_PRICE_SCHOOL_STARTER_USD=price_...
STRIPE_PRICE_SCHOOL_PRO_USD=price_...
STRIPE_PRICE_SCHOOL_ENTERPRISE_USD=price_...
